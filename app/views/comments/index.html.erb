<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Link</th>
      <th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.github_user.login %></td>
        <td><%= link_to comment.html_url, comment.html_url, target: '_blank' %></td>
        <td><%= truncate comment.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
