<h1>Repositories</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Pull Requests</th>
      <th>Comments</th>
    </tr>
  </thead>
  <tbody>
    <% @repositories.each do |repository| %>
      <tr>
        <td>
          <%= link_to repository.name, repository.html_url, target: '_blank' %>
        </td>
        <td>
          <%= link_to repository.pull_requests.count,
            pull_requests_path(search: { repository_id: repository.id }) %>
        </td>
        <td>
          <%= link_to repository.comments.count,
            comments_path(search: { repository_id: repository.id }) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
